<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro
http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="v-1.0-01-departments" author="AndrewSav">
        <sqlFile
                dbms="postgresql"
                encoding="utf8"
                endDelimiter="\nGO"
                relativeToChangelogFile="true"
                splitStatements="true"
                stripComments="true"
                path="01-create-departments-table.sql"
        />
        <sqlFile
                dbms="postgresql"
                encoding="utf8"
                endDelimiter="\nGO"
                relativeToChangelogFile="true"
                splitStatements="true"
                stripComments="true"
                path="01-insert-departments-data.sql"
        />

        <rollback>
            <sqlFile
                    dbms="postgresql"
                    encoding="utf8"
                    endDelimiter="\nGO"
                    relativeToChangelogFile="true"
                    splitStatements="true"
                    stripComments="true"
                    path="01-drop-departments-table.sql"
            />
        </rollback>
    </changeSet>

    <changeSet id="v-1.0.01departments-tag" author="">
        <tagDatabase tag="create_departments_table" />
    </changeSet>

</databaseChangeLog>